

    <div class="jumbotron">
      <div class="container-index">
        <div class="col-sm-6 col-sm-offset-3">
          <div class="panel-body new">
             <h2 class="text-center">Sign up</h2>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="form-field col-sm-6">
                  <%= f.label :first_name %><br />
                  <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class:"form-control" %>
                </div>

                <div class="form-field col-sm-6">
                  <%= f.label :last_name %><br />
                  <%= f.text_field :last_name, autofocus: true, placeholder: " Last Name", class:"form-control" %>
                </div>

                <div class="form-field col-sm-6">
                  <%= f.label :username %><br />
                  <%= f.text_field :username, autofocus: true, placeholder: "Username", class:"form-control" %>
                </div>

                <div class="form-field col-sm-6">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"form-control" %>
                </div>

                <div class="form-field col-sm-12">
                  <%= f.label :current_city %><br />
                  <%= f.text_field :current_city, autofocus: true, placeholder: "Current City", class:"form-control" %>
                </div>

                <div class="form-field col-sm-12">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class:"form-control" %>
                </div>

                <div class="form-field col-sm-12">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class:"form-control" %>
                </div>
                <div class="form-field col-sm-12">
                  <%= f.submit "Sign up", class: "actions center-block btn btn-lg"%>
                </div>
               <% end %>
               <br>
               <div class="col-sm-12">
                 <%= render "devise/shared/links" %>
               </div>
            </div>
         </div>
      </div>




   </div>
