<div class="col-xs-6 col-xs-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Add A Trip</h3>
    </div>
    <div class="panel-body">
      <%= form_for [@user, @trip] do |f| %>
        <div class="form-field">
          <%= f.text_field :name, required: true, placeholder: "Name", class:"form-control" %>
        </div>
        <div class="form-field">
          <%= f.text_field :trip_type, required: true, placeholder: "Trip Type", class:"form-control" %>
        </div>
        <div class="form-field city-show-post-button">
        <%= f.submit "Submit Trip", class: "btn btn-block btn-success user-trip-post-button"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

