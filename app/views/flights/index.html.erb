<div class="col-sm-3">
  <%= render 'users/sidebar' %>
</div>

<div class="col-sm-9">
  <h1>Flights Index</h1>
  

  <div class="col-sm-6 col-sm-offset-3">
    <form id="flight-search">
      <div class="form-group">
        <label for="Origin">Origin</label>
        <input type="text" class="form-control" placeholder="Origin" name="origin">
      </div>
      <div class="form-group">
        <label for="departuredate">Departure Date</label>
        <input type="date" class="form-control" name="departuredate" placeholder="Departure Date">
      </div>
      <div class="form-group">
        <label for="returndate">Return Date</label>
        <input type="date" class="form-control" name="returndate">
      </div>
      <button type="submit" id="submit-query" class="btn btn-default">Submit</button>
    </form>
  </div>

  <div class="col-sm-6 col-sm-offset-3">
    <h1>Results</h1>
    <div class="search-results"></div>
  </div>


  


</div>
