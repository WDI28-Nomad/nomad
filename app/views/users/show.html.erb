<h1>Users#show</h1>

<p> <%= image_tag(@user.avatar_url, :length => 200, :width => 200) if @user.avatar.present? %> </p>
<p> <%= @user.first_name %> </p>
<p> <%= @user.last_name %> </p>
<p> <%= @user.username %> </p>
<p> <%= @user.current_city %> </p>
<p> <%= @user.email %> </p>

<p> <%= @user.created_at.strftime("Date joined: %m/%d/%Y") %> </p>

<%= button_to "Edit", edit_user_path(@user), method: :get %>


  <%= render "/trips/form" %>

  <% @trips.each do |t| %>
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">

              <div class="user-show-post-header-row">
                  <h3 class="user-show-post-title"><%= t.name %></h3>
                  <h4 class="pull-right user-show-post-date"><%= t.trip_type %></h4>
              </div>

        </div>
        <% if current_user %>
        <div class="panel-footer">
          Edit and Delete Buttons
        </div>
        <% end %>
      </div>
    </div>
<% end %>