<div class="mytrips-container">
  <div class="my-trips-header">
    <%= link_to "", user_trips_path(@user, @trip), method: :post, class: "glyphicon glyphicon-plus pull-right" %>
    <h3>My Trips</h3>
  </div>
  <div class="trips-container">
    <div class="my-trips">
      <% @trips.each do |t| %>
        <div class="my-trips-trip">
          <%= link_to "#{h truncate(t.name, :length => 35)}", user_trip_path(@user, t), :"data-no-turbolink" => true, class: "my-trips-trip"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
