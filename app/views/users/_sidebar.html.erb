<div class="col-sm-12 sidebar-container" id="sidebar" data-spy="affix" data-offset-top="300">
  <div class="row sidebar">
      <div class="profile_pic">
        <% if current_user.avatar.present? %>
        <%= link_to image_tag(current_user.avatar_url, :class => "img-circle center-block img-responsive"), user_path(current_user), :"data-no-turbolink" => true %>
        <% else %>
        <%= link_to image_tag(('default.png').to_s, :class => "img-circle center-block img-responsive"), user_path(current_user), :"data-no-turbolink" => true %>
        <% end %>
      </div>
  </div>
  <div class="row">
    <div class="mytrips-container">
      <div class="my-trips-header">
        <%= link_to "", new_user_trip_path(@user, @trip), class: "glyphicon glyphicon-plus pull-right" %>
        <h4 role="button" data-toggle="collapse" href="#collapseMyTrips" aria-expanded="false">My Trips</h4>
      </div>
      <div id="collapseMyTrips" class="trips-container collapse in">
        <div class="my-trips">
          <% @trips.each do |t| %>
            <div class="my-trips-trip">
              <%= link_to "#{h truncate(t.name, :length => 35)}", user_trip_path(@user, t), :"data-no-turbolink" => true, class: "my-trips-trip"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
