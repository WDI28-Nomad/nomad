<div class="col-sm-8 col-sm-offset-2">
      <%= form_for [@user, @trip, @expense] do |f| %>
      <div class="form-group col-sm-4">
        <%= f.label :expense_type %>
        <%= f.select :expense_type, ["Choose Expense Type","Airfare","Lodging","Meals","Fun"], class:"form-control select" %>
      </div>
        <div class="form-group col-sm-8">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: "Name", class:"form-control" %>
        </div>

        <div class="form-group col-sm-4">
          <%= f.label :amount %>
          <%= f.number_field :amount, placeholder: "Amount", class:"form-control" %>
        </div>
        <div class="form-group col-sm-4">
          <%= f.label :start_date %>
          <%= f.date_field :start_date, placeholder: "Start Date", class:"form-control" %>
        </div>
        <div class="form-group col-sm-4">
          <%= f.label :end_date %>
          <%= f.date_field :end_date, placeholder: "End Date", class:"form-control" %>
        </div>
        <div class="form-group">
        <%= f.submit "Submit", class: "btn btn-block btn-success"%>
        </div>
      <% end %>
</div>
